{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "prisma.config.ts"]
}
